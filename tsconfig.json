{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build",
        "alwaysStrict": true,
        "locale": "it",
    },
    "include": [
        "types/*.ts"
    ],
    "noImplicitAny": true,
    "noUnusedParameters": true
}